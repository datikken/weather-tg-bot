{
  "name": "weather-bot",
  "version": "1.0.0",
  "description": "Telegram bot that returns current weather and short forecast by city or location.",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsup src/index.ts --format cjs --out-dir dist --watch --clean & nodemon dist/index.js",
    "build": "tsup src/index.ts --format cjs --dts --out-dir dist --clean",
    "test": "jest --runInBand"
  },
  "keywords": [
    "telegram",
    "bot",
    "weather"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "tsup": "^8.1.0",
    "typescript": "^5.6.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/dotenv": "^8.2.0"
  }
}
